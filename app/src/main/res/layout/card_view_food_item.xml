<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/food_item_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/food_item_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_iv_height"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitXY"
            tools:srcCompat="@drawable/test_image" />

        <TextView
            android:id="@+id/recipe_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/food_item_iv"
            android:padding="8dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:background="@android:color/white"
            android:textColor="@color/colorPrimary"
            tools:text="Recipe Name" />

    </RelativeLayout>


</android.support.v7.widget.CardView>